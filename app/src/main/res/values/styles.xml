<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/boder_title_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="btn_text_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lv_style">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
    </style>

    /*Bieu KT02*/
    <style name="lv_kt02_fragmen">
        <item name="android:gravity">center</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="lv_kt02_fragmen_listitem">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>