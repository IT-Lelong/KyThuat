<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--item name="colorPrimary">@color/colorPrimary</item-->

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/black</item>

        <!-- To change the background of options menu-->

        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>


    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:screenSize">large</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/boder_title_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="title_02">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/title_style_midnight_1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="btn_text_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lv_style">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
    </style>

    /*Bieu KT02*/
    <style name="lv_kt02_fragmen">
        <item name="android:gravity">center</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="lv_kt02_fragmen_listitem">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:dropDownHeight">500dp</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="Spinner1" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:dropDownHeight">100dp</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Spinner2" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:dropDownHeight">100dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>