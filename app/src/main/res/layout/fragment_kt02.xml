<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KT02.Fragment_KT02">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maso1"
            style="@style/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="@string/maso1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chitiet1"
            style="@style/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/chitiet1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diemdatkh"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diemdatkh"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loai1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/loai1"
                    android:textSize="20sp"
                    style="@style/title"/>

                <TextView
                    android:id="@+id/loai2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/title"
                    android:text="@string/loai2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/loai3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/title"
                    android:text="@string/loai3"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/loai4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/title"
                    android:text="@string/loai4"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/loai5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/title"
                    android:text="@string/loai5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/loai6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/loai6"
                    style="@style/title"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/ghichu1"
            style="@style/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:text="@string/ghichu1"
            android:textSize="20sp" />
    </LinearLayout>
    <!--RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#228BC34A"
        android:orientation="vertical" />

</LinearLayout>