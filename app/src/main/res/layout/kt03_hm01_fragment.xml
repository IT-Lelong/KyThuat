<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KT03.KT03_HM0102">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tt_stt"
            android:textStyle="bold"
            android:theme="@style/title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/vitridondep"
            android:textStyle="bold"
            android:theme="@style/title" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/danhgia"
                android:textStyle="bold"
                android:theme="@style/title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_span="2"
                            android:gravity="center"
                            android:text="@string/tot"
                            android:textStyle="bold"
                            android:theme="@style/title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_span="2"
                            android:gravity="center"
                            android:text="@string/khongtot"
                            android:textStyle="bold"
                            android:theme="@style/title" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/tv_hm01_01"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Ca1"
                            android:textStyle="bold"
                            android:theme="@style/title" />

                        <TextView
                            android:id="@+id/tv_hm01_02"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Ca2"
                            android:textStyle="bold"
                            android:theme="@style/title" />

                        <TextView
                            android:id="@+id/tv_hm01_03"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Ca1"
                            android:textStyle="bold"
                            android:theme="@style/title" />

                        <TextView
                            android:id="@+id/tv_hm01_04"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Ca2"
                            android:textStyle="bold"
                            android:theme="@style/title" />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/ghichu"
                    android:textStyle="bold"
                    android:theme="@style/title" />
                <TextView
                    android:id="@+id/login_button"
                    style="@style/title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/hang6"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_hm01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>