<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KT01.Fragmen_KT01">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maso1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hang1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/chitiet1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/hang2"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/diemso1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="@string/hang3"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/diemdat1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="@string/hang4"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/ghichu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:text="@string/hang5"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="1dp"
            android:textColor="#FFFFFF"
            android:background="#3F51B5"
            android:text="@string/hang6"/>

    </LinearLayout>
    <!--RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#228BC34A"
        />

</LinearLayout>