<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_stt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/tt_stt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/border_listview"/>

    <TextView
        android:id="@+id/tv_hangmuc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingLeft="5dp"
        android:gravity="center|left"
        android:text="@string/vitridondep"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/border_listview"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/border_listview"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_tot_ca1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/border_listview"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_tot_ca2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/border_listview"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_kotot_ca1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/border_listview"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_kotot_ca2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_ghiChu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/border_listview"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập thông tin" />

</LinearLayout>