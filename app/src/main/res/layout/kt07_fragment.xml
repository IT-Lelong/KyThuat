<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KT07.KT07_Main"
    android:background="#756363"
    android:id="@+id/drawer_layout">

    <!-- Main content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Your main content goes here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/title_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/tc_cea03"
                android:textSize="20sp" />

            <TextView
                style="@style/title_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/tc_cea04"
                android:textSize="20sp" />
            <TextView
                style="@style/title_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tc_cea05"
                android:textSize="20sp" />
            <TextView
                style="@style/title_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tc_cea09"
                android:textSize="20sp" />

            <TextView
                style="@style/title_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tc_ceb04"
                android:textSize="20sp" />

        </LinearLayout>
        <!--RecyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_hangmuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- Navigation Drawer -->
    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#756363"
        android:layout_gravity="start"
        app:headerLayout="@layout/kt07_nav_header">

        <ExpandableListView

            android:id="@+id/navMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ExpandableListView>
   </com.google.android.material.navigation.NavigationView>
        <!--app:menu="@menu/menu_drawer" -->

</androidx.drawerlayout.widget.DrawerLayout>