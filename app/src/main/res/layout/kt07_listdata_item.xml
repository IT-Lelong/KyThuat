<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#0300BCD4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tc_cea03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:text="Loại"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tc_cea04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:background="@drawable/border_listview"
            android:gravity="left|center_vertical"
            android:text="Nhà máy"
            android:onClick="OnClick"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tc_cea05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:onClick="OnClick"
            android:text="Mã số"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tc_ceb04_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/border_listview"
            android:gravity="center"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tc_ceb04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:text="Số đo"
            android:inputType="number"
            android:onClick="OnClick"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_tc_ceb04_diff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:text="Lượng tiêu thụ"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_tc_ceb07"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:background="@drawable/border_listview"
            android:gravity="center"
            android:text="Ghi chú"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>