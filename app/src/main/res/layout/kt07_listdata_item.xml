<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#0300BCD4"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/tc_cea03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_listview"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Loại stt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tc_cea04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_listview"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Nhà máy"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tc_cea05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_listview"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mã số"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tc_cea06"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_listview"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chì tiêu ngày"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tc_cea07"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_listview"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Ghi chú"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tc_ceb04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_listview"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine" />




    </LinearLayout>
</LinearLayout>